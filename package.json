{
  "name": "browser-extension-calmoon",
  "version": "1.1.0",
  "description": "Disable \"Notify this update\" when you join/leave event on Garoon",
  "main": "src/app/calmoon.ts",
  "repository": "git@github.com:mshrtsr/browser-extension-calmoon.git",
  "author": "Masaharu TASHIRO <masatsr.kit@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "run-s clean:dev",
    "prebuild": "run-s clean:prod",
    "start": "webpack --config webpack.dev.ts",
    "build": "webpack --config webpack.prod.ts",
    "package": "run-s build && web-ext build --source-dir ./build/ --overwrite-dest",
    "clean": "run-s clean:dev clean:prod clean:package",
    "clean:dev": "rimraf dev-build",
    "clean:prod": "rimraf build",
    "clean:package": "rimraf web-ext-artifacts",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint ./ --ext js,ts,tsx",
    "lint:prettier": "prettier './**/*.{js,ts,json}' --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "run-s lint:eslint -- --fix",
    "fix:prettier": "run-s lint:prettier -- --write",
    "test": "jest --passWithNoTests",
    "conv-icons": "$PWD/tools/convert-icons.sh",
    "release-note:new": "$PWD/tools/generate-release-note.sh"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^16.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/jest": "^27.0.3",
    "@types/webpack": "^5.28.0",
    "chrome-manifest-loader": "^0.3.0",
    "copy-webpack-plugin": "^10.0.0",
    "eslint": "^8.3.0",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "jest": "^27.3.1",
    "json-minimizer-webpack-plugin": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "web-ext": "^6.5.0",
    "webpack": "^5.64.3",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  }
}
