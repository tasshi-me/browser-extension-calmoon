{
  "name": "browser-extension-calmoon",
  "version": "1.1.0",
  "description": "Disable \"Notify this update\" when you join/leave event on Garoon",
  "main": "src/app/calmoon.ts",
  "repository": "git@github.com:mshrtsr/browser-extension-calmoon.git",
  "author": "Masaharu TASHIRO <masatsr.kit@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prestart": "run-s clean:dev",
    "prebuild": "run-s clean:prod",
    "start": "run-s start:chrome",
    "start:chrome": "TARGET=chrome webpack --config webpack.dev.ts",
    "start:firefox": "TARGET=firefox webpack --config webpack.dev.ts",
    "start:all": "run-p start:chrome start:firefox",
    "build": "run-s build:chrome",
    "build:chrome": "TARGET=chrome webpack --config webpack.prod.ts",
    "build:firefox": "TARGET=firefox webpack --config webpack.prod.ts",
    "build:all": "run-s build:chrome build:firefox",
    "package": "run-s package:chrome",
    "package:chrome": "run-s build:chrome && web-ext build --source-dir ./build/chrome --artifacts-dir ./web-ext-artifacts/chrome --overwrite-dest",
    "package:firefox": "run-s build:firefox && web-ext build --source-dir ./build/firefox --artifacts-dir ./web-ext-artifacts/firefox --overwrite-dest",
    "package:all": "run-s package:chrome package:firefox",
    "clean": "run-s clean:dev clean:prod clean:package",
    "clean:dev": "rimraf dev-build",
    "clean:prod": "rimraf build",
    "clean:package": "rimraf web-ext-artifacts",
    "lint": "run-s lint:eslint lint:prettier",
    "lint:eslint": "eslint ./ --ext js,ts,tsx",
    "lint:prettier": "prettier './**/*.{js,ts,json}' --check",
    "fix": "run-s fix:eslint fix:prettier",
    "fix:eslint": "run-s lint:eslint -- --fix",
    "fix:prettier": "run-s lint:prettier -- --write",
    "test": "jest --passWithNoTests",
    "conv-icons": "$PWD/tools/convert-icons.sh",
    "release-note:new": "$PWD/tools/generate-release-note.sh"
  },
  "devDependencies": {
    "@cybozu/eslint-config": "^17.0.0",
    "@tsconfig/recommended": "^1.0.1",
    "@types/copy-webpack-plugin": "^8.0.1",
    "@types/jest": "^27.4.0",
    "@types/mini-css-extract-plugin": "^2.5.0",
    "@types/webextension-polyfill": "^0.8.2",
    "@types/webpack": "^5.28.0",
    "chrome-manifest-loader": "^0.3.0",
    "copy-webpack-plugin": "^10.2.4",
    "css-loader": "^6.6.0",
    "eslint": "^8.8.0",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "json-minimizer-webpack-plugin": "^3.3.0",
    "merge-jsons-webpack-plugin": "^2.0.1",
    "mini-css-extract-plugin": "^2.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "web-ext": "^6.6.0",
    "webextension-polyfill": "^0.8.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@miyajan/garoon-rest": "^0.4.0",
    "buffer": "^6.0.3",
    "garoon-soap": "^0.1.12",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "timers-browserify": "^2.0.12"
  }
}
